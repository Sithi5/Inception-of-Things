VAGRANT_BOX = "centos/stream8"

VM_NAME_MASTER = 'mabouceS'
VM_NAME_WORKER = 'maginistSW'

MEM = 1024
CPUS = 1
MASTER_IP = "192.168.42.110"
WORKER_IP = "192.168.42.111"

Vagrant.configure(2) do |config|
  config.vm.box = VAGRANT_BOX

  config.vbguest.installer_options = { allow_kernel_upgrade: true }
  config.vm.provider "virtualbox" do |v|
    v.memory = MEM
    v.cpus = CPUS
    v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
    v.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
    v.gui = false
  end

  config.vm.define VM_NAME_MASTER do |master|
    master.vm.hostname = VM_NAME_MASTER
    master.vm.synced_folder "./", "/home/vagrant/synced_folder"
    master.vm.network "private_network", ip: MASTER_IP
    master.vm.provision "shell", privileged: true, path: "scripts/install_master_k3s.sh"
    master.vm.provider "virtualbox" do |v|
      v.name = VM_NAME_MASTER
    end
  end

  config.vm.define VM_NAME_WORKER do |worker|
    worker.vm.hostname = VM_NAME_WORKER
    worker.vm.synced_folder "./", "/home/vagrant/synced_folder"
    worker.vm.network "private_network", ip: WORKER_IP
    worker.vm.provision "shell", privileged: true, path: "scripts/install_worker_k3s.sh", args: [WORKER_IP]
    worker.vm.provider "virtualbox" do |v|
      v.name = VM_NAME_WORKER
    end
  end
end